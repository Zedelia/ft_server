#create an image
docker build -t NAME_IMAGE path_to_dockerfile

ex : docker build -t test .

#erase an image
docker image rm NAME_IMAGE

#stop a running docker
docker stop NAME_CONTAINER

#create a container
docker run --name NAME_CONTAINER NAME_IMAGE(in option :VERSION)

#erase a container (need to be stop)
docker container rm NAME_CONTAINER

#rentrer dans un docker
docker exec -it NAME_CONTAINER bash

#nettoyer docker
docker system prune

#usefull here
docker build -t 42im .
docker run -d --name 42cont 42im
docker exec -it 42cont bash
docker container rm 42cont
docker image rm 42im

#status services
service --status-all

#build all
docker build -t 42im . && docker run -d --name 42cont -p80:80 -p443:443 42im && docker exec -it 42cont bash

#destroy all
docker stop 42cont && docker container rm 42cont

#connect to mysql
mysql -u root -p
